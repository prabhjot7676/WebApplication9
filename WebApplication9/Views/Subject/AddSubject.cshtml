@model WebApplication9.Models.AddSubjectViewModel

<div class="container">
    <h2>Add Subject</h2>

    <form asp-action="AddSubject" method="post">
        <div class="mb-3">
            <label for="subjectName" class="form-label">Subject Name:</label>
            <input type="text" id="subjectName" name="Subject.Name" class="form-control" />
            <span asp-validation-for="Subject.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="subjectClass" class="form-label">Subject class:</label>
            <input type="text" id="subjectClass" name="Subject.Class" class="form-control" />
            <span asp-validation-for="Subject.Class" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="teacherSelect" class="form-label">Select Teachers:</label>
            <div id="teacherSelect">
                @if(Model.AvailableTeachers!=null)
                {
                    @foreach (var teacher in Model.AvailableTeachers)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="SelectedTeacherIds" value="@teacher.Id" id="teacher-@teacher.Id" />
                            <label class="form-check-label" for="teacher-@teacher.Id">@teacher.Name</label>
                        </div>
                    }
                }
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Add Subject</button>
    </form>
</div>
